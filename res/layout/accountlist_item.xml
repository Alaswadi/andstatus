<?xml version="1.0" encoding="UTF-8"?>
<!-- One item in the accountlist
This examples helped me here: 
  http://stackoverflow.com/questions/6233665/how-to-list-view-whole-row-selectable-in-android
  http://stackoverflow.com/questions/8796620/setting-a-minimum-height-and-layout-weight-on-edit-text-android  
-->
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="wrap_content"
		android:layout_height="wrap_content"
        android:minHeight="50dip"
		android:orientation="horizontal">

	<TextView
	    android:id="@+id/visible_name"
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
        android:layout_marginLeft="5dip"
        android:layout_centerVertical="true" />

    <TextView android:id="@+id/name"
        android:layout_height="wrap_content"
        android:layout_width="0dip"
        android:visibility="gone" />
	
	<TextView android:id="@+id/type"
        android:layout_height="wrap_content"
        android:layout_width="0dip"
        android:visibility="gone" />
</RelativeLayout>
